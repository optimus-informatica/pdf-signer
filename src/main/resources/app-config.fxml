<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox prefHeight="466.0" prefWidth="815.0" spacing="14.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.osasco.optimus.pdfsigner.AppConfigController">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="Arquivo">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#closeApp" text="Fechar"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Ajuda">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openAbout" text="Sobre"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <GridPane
                style="-fx-background-image: url('/signature-bg.png'); -fx-background-position: center; -fx-background-repeat: no-repeat"
                VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <GridPane hgap="14.0" vgap="14.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity"/>
                        <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0"/>
                        <RowConstraints/>
                    </rowConstraints>
                    <children>
                        <Label text="Tipo de certificado:"/>
                        <HBox spacing="14.0" GridPane.columnIndex="1">
                            <children>
                                <RadioButton fx:id="a1" mnemonicParsing="false" text="Certificado A1"/>
                                <RadioButton fx:id="a3" mnemonicParsing="false" text="Certificado A3"/>
                                <RadioButton fx:id="win32" mnemonicParsing="false" text="Win32 Store"/>
                            </children>
                        </HBox>
                        <Label text="Identidades:" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="cbCertificate" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                                  GridPane.rowIndex="1"/>
                        <Label text="Arquivo de Certificado:" GridPane.rowIndex="2"/>
                        <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <children>
                                <TextField fx:id="fieldCertificate" HBox.hgrow="ALWAYS"/>
                                <Button mnemonicParsing="false" onAction="#selectCertificateFile" text="Procurar..."/>
                            </children>
                        </HBox>

                        <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <PasswordField fx:id="fieldPassword" HBox.hgrow="ALWAYS"/>
                            <Button onAction="#loadCertificates" text="Carregar identidades"/>
                        </HBox>
                        <Label text="Pasta de entrada:" GridPane.rowIndex="4"/>
                        <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                            <children>
                                <TextField fx:id="fieldFolderIn" HBox.hgrow="ALWAYS"/>
                                <Button mnemonicParsing="false" onAction="#selectFolderIn" text="Procurar..."/>
                            </children>
                        </HBox>
                        <Label text="Pasta de entrada:" GridPane.rowIndex="5"/>
                        <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
                            <children>
                                <TextField fx:id="fieldFolderOut" HBox.hgrow="ALWAYS"/>
                                <Button mnemonicParsing="false" onAction="#selectFolderOut" text="Procurar..."/>
                            </children>
                        </HBox>
                        <GridPane GridPane.columnIndex="1" GridPane.rowIndex="6">
                            <children>
                                <Label fx:id="logs" text="Assinando documentos..." visible="false"/>
                                <ProgressIndicator fx:id="progress" visible="false" GridPane.columnIndex="1"/>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308"
                                                   minWidth="-Infinity"/>
                                <ColumnConstraints halignment="RIGHT"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                            </rowConstraints>
                        </GridPane>
                        <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="7">
                            <children>
                                <Button ellipsisString="Teste" mnemonicParsing="false" onAction="#configure"
                                        text="Configurar" HBox.hgrow="ALWAYS"/>
                                <Button mnemonicParsing="false" onAction="#saveConfigs" text="Salvar"/>
                                <Button mnemonicParsing="false" onAction="#signerTest" text="Testar"/>
                                <Button mnemonicParsing="false" onAction="#signer" text="Assinar"/>
                            </children>
                        </HBox>
                    </children>
                    <GridPane.margin>
                        <Insets bottom="14.0" left="14.0" right="14.0" top="14.0"/>
                    </GridPane.margin>
                </GridPane>
                <ImageView fitHeight="38.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true"
                           GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                    <image>
                        <Image url="@gplv3.png"/>
                    </image>
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                </ImageView>
            </children>
        </GridPane>
        <Label fx:id="status" text="Label"/>
    </children>
</VBox>
